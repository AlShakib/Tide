<resources>
    <declare-styleable name="TideView">
        <attr name="tide_max" format="integer"/>
        <attr name="tide_progress" format="integer"/>
        <attr name="tide_width" format="dimension"/>
        <attr name="tide_gap" format="dimension"/>
        <attr name="tide_min_height" format="dimension"/>
        <attr name="tide_corner_radius" format="dimension"/>
        <attr name="tide_background_color" format="color"/>
        <attr name="tide_progress_color" format="color"/>
        <attr name="tide_gravity" format="enum">
            <enum name="top" value="1" />
            <enum name="center" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
</resources>